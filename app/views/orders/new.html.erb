<% provide(:title, 'Sign up') %>

<h1>Work Order Form</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@order) do |f| %>
    	<%= render 'shared/error_messages', :object =>f.object %>

    	<%=f.label :name %>
      <%=f.text_field :name %>

      <%=f.label :email %>
      <%=f.text_field :email %>

      <%= f.label :issue %>
    	<%= f.text_field :issue %>

    	<%= f.label :description %>
    	<%= f.text_field :description %>

    	<%= f.label :time, "Time You Are Available" %>
    	<%= f.text_field :time %>

      <%= f.submit "Create my order", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>